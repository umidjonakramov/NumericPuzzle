    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/arrow_back2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/left_arrow_back_svgrepo_com" />

</FrameLayout>

