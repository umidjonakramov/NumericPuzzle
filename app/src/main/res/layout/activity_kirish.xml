<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_10"
    tools:context=".KirishActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/clip"
        android:text="Numeric Puzzle"
        android:textColor="#F35DF7"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <studio.karo.neonbutton.NeonButton
            android:id="@+id/btnPlay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/clip"
            android:text="Play"
            android:textColor="#F35DF7"
            android:textSize="24sp"
            app:nb_neon_color="#F35DF7"
            app:nb_neon_filled="false"
            app:nb_neon_icon_padding="15dp"
            app:nb_neon_radius="20dp"
            app:nb_neon_width="2dp" />

        <studio.karo.neonbutton.NeonButton
            android:id="@+id/statistic"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/clip"
            android:text="Statistics"
            android:textColor="#F35DF7"
            android:textSize="24sp"
            app:nb_neon_color="#F35DF7"
            app:nb_neon_filled="false"
            app:nb_neon_icon_padding="15dp"
            app:nb_neon_radius="20dp"
            app:nb_neon_width="2dp" />

        <studio.karo.neonbutton.NeonButton
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/clip"
            android:text="About"
            android:textColor="#F35DF7"
            android:textSize="24sp"
            app:nb_neon_color="#F35DF7"
            app:nb_neon_filled="false"
            app:nb_neon_icon_padding="15dp"
            app:nb_neon_radius="20dp"
            app:nb_neon_width="2dp" />

        <studio.karo.neonbutton.NeonButton
            android:id="@+id/Exit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/clip"
            android:text="Exit"
            android:textColor="#F35DF7"
            android:textSize="24sp"
            app:nb_neon_color="#F35DF7"
            app:nb_neon_filled="false"
            app:nb_neon_icon_padding="15dp"
            app:nb_neon_radius="20dp"
            app:nb_neon_width="2dp" />

        <!--        <studio.karo.neonbutton.NeonButton-->
        <!--            android:id="@+id/neonButton"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="70dp"-->
        <!--            android:text="New Game"-->
        <!--            android:layout_marginHorizontal="15dp"-->
        <!--            android:textSize="20sp"-->
        <!--            android:textColor="#DDCA25"-->
        <!--            app:nb_neon_width="2dp"-->
        <!--            app:nb_neon_radius="20dp"-->
        <!--            app:nb_neon_color="#DDCA25"-->
        <!--            app:nb_neon_filled="false"-->
        <!--            app:nb_neon_icon_padding="15dp"/>-->


    </LinearLayout>

    <ImageView
        android:id="@+id/volume"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:src="@drawable/volume_loud_svgrepo_com"
        />

</FrameLayout>